<!-- Header Section  -->

<header>
  <nav>
    <ul class='nav_links'>
      <li><a href='#' class='logo'>The Chronicler</a></li>
      <a class='dashboard' href='/dashboard'><button>Dashboard</button></a>
      <li>Welcome Back, {{user.name}}!</li>
    </ul>
  </nav>
  <form id='content' class='hide'>
    <input type='text' name='input' class='input' id='search-input' />
    <button type='reset' class='search' id='search-btn'>Search</button>
  </form>
  <a id="logout" class='logout'><button>Logout</button></a>
</header>

