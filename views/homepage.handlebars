{{!-- jumbotron --}}
<section class='home' id='home'>
    <div class='row'>
        <div class='content'>
            <h3>Building your library?</h3>
            <p>
                Reading should be an important part of everyone's day! Here at The 
                Chronicler, we want to make finding the perfect book effortless, simply 
                click on a book or genre that interests you or utilize the search feature to 
                find the title, genre, or author you've been itching to get your hands on!
            </p>
        </div>

        <div class='swiper books-slider'>
            <div class='swiper-wrapper'>

                {{#each randomBooks as |book|}}
                    <a href='/book/{{book.id}}' class='swiper-slide'>
                        <img class="carousel-img" src='{{book.image_url}}' alt=''/>
                    </a>
                {{/each}}

            </div>
            <img src='/image/stand.png' class='stand' alt='' />
        </div>
    </div>
</section>

{{!-- categories --}}
<section class='categories'>
    <div class='category-header'>
        <h3>Categories</h3>
    </div>
    <div class='swiper' id='category-slider'>
        <div class='swiper-wrapper' id='category-align'>
            <a href='/category/mystery' class='swiper-slide'>
                <img src='/image/mystery.png' alt=''/>
                <p class='p-margin'>Mystery</p>
            </a>
            <a href='/category/fantasy' class='swiper-slide'>
                <img src='/image/fantasy.png' alt=''/>
                <p class='fantasy'>Fantasy</p></a>
            <a href='/category/history' class='swiper-slide'>
                <img src='/image/history.png' alt=''/>
                <p class='p-margin'>History</p>
            </a>
            <a href='/category/romance' class='swiper-slide'>
                <img src='/image/romance.png' alt=''/>
                <p class='p-margin'>Romance</p></a>
            <a href='/category/science_fiction' class='swiper-slide'>
                <img src='/image/scifi.png' alt=''/>
                <p class='scifi'>Sci-Fi</p>
            </a>
            <a href='/category/young_adult' class='swiper-slide'>
                <img src='/image/young.png' alt='' />
                <p class='more'>Young Adult</p>
            </a>
            <!-- <div class="categories-button-next"></div>
                <div class="categories-button-prev"></div> -->
        </div>
    </div>
</section>

{{!-- recommended --}}
<section class='recommended' id='recommended'>
    <h1 class='heading'><span>Recommended Books</span></h1>

    <div class='swiper recommended-slider'>
        <div class='swiper-wrapper'>

            {{#each recommendedBooks as |book|}}
            <div class='swiper-slide box'>
                <div class='image'>
                    <a href="/book/{{book.id}}">
                        <img src='{{book.image_url}}' alt=''/>
                    </a>
                </div>
                <div class='content'>
                    <h3 class='new-books'>{{book.title}}</h3>
                </div>
            </div>
            {{/each}}

        </div>

        <div class='swiper-button-next'></div>
        <div class='swiper-button-prev'></div>
    </div>
</section>

